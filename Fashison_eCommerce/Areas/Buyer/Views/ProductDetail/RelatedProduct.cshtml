
@{
    Layout = null;
}


<div class="tab-content">
    <div class="tab-pane" id="listView">
        @foreach (var prod1 in ViewBag.ProductsByType)
        {
            <div class="row">
                <div class="span2">
                    <img src="~/Product_Images/@prod1.Pictures" alt="" style="max-height: unset; max-width: 215px" />
                </div>
                <div class="span4">
                    <hr class="soft" />
                    <h4> @prod1.Name </h4>
                    <h5>
                        @prod1.Decription
                    </h5>
                    <a class="btn btn-small pull-right" href="/Buyer/ProductDetail/Details?id=@prod1.Product_ID">View Details</a>
                    <br class="clr" />
                </div>
                <div class="span3 alignR">
                    <form class="form-horizontal qtyFrm">
                        <h3>@prod1.Price</h3>
                        <label class="checkbox">
                        </label><br />
                        <div class="btn-group">
                            <a href="product_details.html" class="btn btn-large btn-primary"> Add to <i class=" icon-shopping-cart"></i></a>
                            <a href="product_details.html" class="btn btn-large"><i class="icon-zoom-in"></i></a>
                        </div>
                    </form>
                </div>
            </div>
            <hr class="soft" />
        }

    </div>
    <div class="tab-pane active" id="blockView">
        <ul class="thumbnails">
            @foreach (var prod in ViewBag.ProductsByType)
            {
                <li class="span3">
                    <div class="thumbnail">
                        <a href="/Buyer/ProductDetail/Details?id=@prod.Product_ID"><img src="~/Product_Images/@prod.Pictures" alt="" style="width: 190px; height: 210px" /></a>
                        <div class="caption">
                            <h5>@prod.Name</h5>
                            <p>
                                @prod.Decription
                            </p>
                            <h4 style="text-align:center"><a class="btn" href="/Buyer/ProductDetail/Details?id=@prod.Product_ID"> <i class="icon-zoom-in"></i></a> <a class="btn" href="#">add to <i class="icon-shopping-cart"></i></a> <a class="btn btn-primary" href="#">@prod.Price</a></h4>
                        </div>
                    </div>
                </li>
            }
        </ul>
        <hr class="soft" />
    </div>

</div>


