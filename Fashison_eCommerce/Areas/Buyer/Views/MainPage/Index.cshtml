<script language="javascript">
    $.ajax({
        // load cac san pham
        url: "/Buyer/MainPage/LoadProducts",
        success: function (result) {
            $(".loader").html(result);

            // gan event cho cac button add to cart
            var user = {
                init: function () {
                    console.log("init");
                    user.registerEvents();
                },
                registerEvents: function () {
                    $('.AddToCart').off('click').on('click', function (e) {
                        console.log("click");
                        e.preventDefault();
                        var id = $(this).data('product_id');
                        console.log(id);
                        // them san pham vao gio hang
                        $.ajax({
                            url: "/Buyer/Cart_Item/AddToCart",
                            type: 'POST',
                            data: { ProductID: id },
                            success: function (msg) {
                                // load lai so san pham co trong gio hang
                                $.ajax({
                                    url: "/Buyer/UserCart/CountCartItem",
                                    success: function (result) {
                                        $("cart_info").html(result);
                                        alert('Add to cart successfully!');
                                    }
                                });
                            }
                        });
                    });
                }
            }
            user.init();
        }
    });
   
</script>

