@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Seller/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <div class="order-list">
            <h3>Fade in Tabs</h3>

            <div class="tab">
                <button class="tablinks" onclick="openTabcontrol(event, 'all')">Tất cả</button>
                <button class="tablinks" onclick="openTabcontrol(event, 'confirm')">Chờ xác nhận</button>
                <button class="tablinks" onclick="openTabcontrol(event, 'receive')">Chờ lấy hàng</button>
                <button class="tablinks" onclick="openTabcontrol(event, 'deliver')">Đang giao</button>
                <button class="tablinks" onclick="openTabcontrol(event, 'delivered')">Đã giao</button>
                <button class="tablinks" onclick="openTabcontrol(event, 'cancel')">Đơn hủy</button>
            </div>

            <div id="all" class="tabcontent">
                <div>
                    <div>
                        <input class="btnSearch" type="text" placeholder="Search..">
                    </div>
                    <div class="order-export">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group pmd-textfield pmd-textfield-floating-label">
                                    <label>Ngày bắt đầu: </label>
                                    <div id="datepicker" class="input-group date" data-date-format="dd-mm-yyyy">
                                        <input class="form-control" readonly="" type="text">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group pmd-textfield pmd-textfield-floating-label">
                                    <label>Ngày kết thúc: </label>
                                    <div id="datepicker" class="input-group date" data-date-format="dd-mm-yyyy">
                                        <input class="form-control" readonly="" type="text">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div>
                    <h3>Đơn hàng</h3>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%">
                                <thead>
                                    <tr>
                                        <th>Mã đơn hàng</th>
                                        <th>Giá</th>
                                        <th>Trạng thái đơn hàng</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Mã đơn hàng</th>
                                        <th>Giá</th>
                                        <th>Trạng thái đơn hàng</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (var item in ViewBag.listOrders)
                                    {
                                        <tr>
                                            <td>
                                                @item.Recipt_ID
                                            </td>
                                            <td>
                                                @item.Total_Cost
                                            </td>
                                            <td>
                                                @item.User_ID
                                            </td>
                                            <td>
                                                <a onclick="return confirm('Do you want to Delete?')"
                                                   href="@Url.Action("Delete","UserAPI",new {id= item.Id})">Delete</a>
                                                || <a href="@Url.Action("Edit","UserAPI",new { id = item.Id })">Edit</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>

            <div id="confirm" class="tabcontent">
                <h3>Chờ xác nhận</h3>
                <p>Paris is the capital of France.</p>
            </div>

            <div id="receive" class="tabcontent">
                <h3>Chờ lấy hàng</h3>
                <p>Tokyo is the capital of Japan.</p>
            </div>

            <div id="deliver" class="tabcontent">
                <h3>Đang giao</h3>
                <p>Tokyo is the capital of Japan.</p>
            </div>

            <div id="delivered" class="tabcontent">
                <h3>Đã giao</h3>
                <p>Tokyo is the capital of Japan.</p>
            </div>

            <div id="cancel" class="tabcontent">
                <h3>Đơn hủy</h3>
                <p>Tokyo is the capital of Japan.</p>
            </div>


            <script src="tabcontrol.js">

            </script>
            <!-- Script -->
            <!-- jQuery -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

            <!-- Bootstrap -->
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

            <!-- Datepicker -->
            <link href='bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css' rel='stylesheet' type='text/css'>
            <script src='bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js' type='text/javascript'></script>
    </div>

</div>
