@model Fashison_eCommerce.Models.Main_Type

@{
    Layout = null;
}



<!-- Modal Header -->
<div class="modal-header">
    <h4 class="modal-title">Edit Type</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<!-- Modal body -->
<div class="modal-body">
    <form action="../Main_Type/Edit" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="addEmail">ID :</label>
            <input type="email" id="addEmail" class="form-control bg-gray-300" name="id" value="@ViewBag.typeID.ID" readonly>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="addName">Name :</label>
            <select name="Name" class="form-control" value="@ViewBag.typeID.Name">
                @foreach (var y in ViewBag.type)
                {
                    <option value="@y.ID">@y.Name</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-success">Save</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    </form>
</div>
