@model Fashison_eCommerce.Models.User

@{
    Layout = null;
}



<!-- Modal Header -->
<div class="modal-header">
    <h4 class="modal-title">Edit user</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<!-- Modal body -->
<div class="modal-body">
    <form action="../Users/Edit" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="text" id="addUsername" class="form-control bg-gray-200" name="Id" readonly value="@ViewBag.user.Id" style="display: none">
        </div>
        <div class="form-group">
            <input type="password" id="addUsername" class="form-control bg-gray-200" name="Password" readonly value="@ViewBag.user.Password" style="display: none">
        </div>
        <div class="form-group">
            <label asp-for="addUsername">UserName :</label>
            <input type="text" id="addUsername" class="form-control bg-gray-200" name="Username" readonly value="@ViewBag.user.Username">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="addEmail">Email :</label>
            <input type="email" id="addEmail" class="form-control" name="Email" value="@ViewBag.user.Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="addName">Name :</label>
            <input type="text" id="addName" class="form-control" name="Name" value="@ViewBag.user.Name">
        </div>
        <div class="form-group">
            <label for="addPhone">Phone :</label>
            <input type="tel" id="addPhone" class="form-control" name="Phone" value="@ViewBag.user.Phone">
        </div>
        <div class="form-group">
            <label for="addAddress">Address :</label>
            <input type="text" id="addAddress" class="form-control" name="Address" value="@ViewBag.user.Address">
        </div>
        <div class="form-group">
            <label for="addGender">Gender :</label>
            <select name="Gender" id="addGender" class="form-control" value="@ViewBag.user.Gender">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>
        @*<div class="form-group">
            <label for="addDOfB">DOB :</label>
            <input type="file" class="form-control" id="addAvatar" name="Picture" text="@ViewBag.picture">
        </div>
        <div class="form-group">
            <label for="addDOfB">DOB :</label>
            <input type="date" class="form-control" id="addDOB" name="Birthday" value="@ViewBag.birthday">
        </div>*@
        <div class="form-group">
            <label for="addRole">Role :</label>
            <select name="RoleID" id="addRole" class="form-control bg-gray-200" value="@ViewBag.user.Role" readonly>
                <option value="1">Admin</option>
                <option value="0">User</option>
            </select>
        </div>
        <button type="submit" class="btn btn-success">Save</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
    </form>
</div>